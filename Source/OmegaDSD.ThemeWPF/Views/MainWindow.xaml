<Window x:Class="OmegaDSD.ThemeWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cv="clr-namespace:OmegaDSD.ThemeWPF.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:OmegaDSD.ThemeWPF"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:themes="clr-namespace:OmegaDSD.ThemeWPF.Themes"
        xmlns:vm="clr-namespace:OmegaDSD.ThemeWPF.ViewModels"
        xmlns:views="clr-namespace:OmegaDSD.ThemeWPF.Views"
        Title="MainWindow"
        Width="800"
        Height="450"
        Style="{DynamicResource WindowStyle}"
        mc:Ignorable="d">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <views:ThemeManagerUserControl Grid.Column="0"/>
        <GroupBox Grid.Column="1" Margin="5" Header="{Binding SelectedObjectPanel.Name, Mode=TwoWay}">
            <ContentControl Content="{Binding SelectedObjectPanel, Mode=OneWay}"/>
        </GroupBox>
    </Grid>
</Window>
