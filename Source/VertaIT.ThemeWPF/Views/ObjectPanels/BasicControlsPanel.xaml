        <ComboBox Width="250"
                  Margin="258,0,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  IsEditable="False"
                  IsEnabled="False"
                  SelectedIndex="0">
            <ComboBoxItem Content="Disabled Combo Box Item 1" />
            <ComboBoxItem Content="Disabled Combo Box Item 2" />
            <ComboBoxItem Content="Disabled Combo Box Item 3" />
        </ComboBox>
        <PasswordBox Width="250"
                     Margin="0,99,0,0"
