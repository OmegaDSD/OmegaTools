        <TextBlock Margin="304,269,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{DynamicResource TextBlockStyle}"
                   Text="Text Block" />
        <TextBlock Margin="376,269,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   IsEnabled="False"
                   Style="{DynamicResource TextBlockStyle}"
                   Text="Disabled Text Block" />
        <Label Margin="304,333,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Label" />
        <Label Margin="376,333,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Disabled Label"
               IsEnabled="False" />
        <TextBlock Margin="304,300,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"><Hyperlink>
                <Run Text="HyperLink" />
            </Hyperlink></TextBlock>
        <TextBlock Margin="376,300,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   IsEnabled="False"><Hyperlink>
                <Run Text="Disabled HyperLink" />
            </Hyperlink></TextBlock>
        <RadioButton Height="Auto"
                     Margin="123,351,0,0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Content="Disabled Radio Button 1"
                     IsEnabled="False" />
        <RadioButton Height="Auto"
                     Margin="123,376,0,0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Content="Disabled Radio Button 2"
                     IsChecked="True"
                     IsEnabled="False" />
        <RadioButton Height="Auto"
                     Margin="123,401,0,0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Content="Disabled Radio Button 3"
                     IsEnabled="False" />
